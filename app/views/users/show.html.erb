<% now = Time.zone.now %>
<div class="page-header">
  <%= @user.username %><br>
  <%= link_to 'プロフィール編集', edit_user_registration_path, class: "btn btn-primary" %>
</div>
<ul class="nav nav-tabs nav-justified">
  <li class="active"><a href="#tab1" data-toggle="tab">開催予定のイベント</a></li>
  <li><a href="#tab2" data-toggle="tab">参加予定のイベント</a></li>
  <li><a href="#tab3" data-toggle="tab">開催したイベント</a></li>
  <li><a href="#tab4" data-toggle="tab">参加したイベント</a></li>
</ul>
<div class="tab-content">
  <div class="tab-pane active" id="tab1">
    <div>
      <h2>開催予定のイベント一覧</h1>
    </div>
    <div class="list-group">
      <% @future_events_owner.each do |event| %>
        <%= link_to(event, class: 'list-group-item') do %>
          <h4 class="list-group-item-heading">
            <%= event.name %>
          </h4>
          <p class="list-group-item-text">
            <%= event.start_time.strftime('%Y/%m/%d %H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d %H:%M') %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="tab2">
    <div>
      <h2>参加予定のイベント一覧</h1>
    </div>
    <div class="list-group">
      <% @future_events_part.each do |event| %>
        <%= link_to(event, class: 'list-group-item') do %>
          <h4 class="list-group-item-heading">
            <%= event.name %>
          </h4>
          <p class="list-group-item-text">
            <%= event.start_time.strftime('%Y/%m/%d %H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d %H:%M') %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="tab3">
    <div>
      <h2>開催したイベント一覧</h1>
    </div>
    <div class="list-group">
      <% @past_events_owner.each do |event| %>
        <%= link_to(event, class: 'list-group-item') do %>
          <h4 class="list-group-item-heading">
            <%= event.name %>
          </h4>
          <p class="list-group-item-text">
            <%= event.start_time.strftime('%Y/%m/%d %H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d %H:%M') %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane" id="tab4">
    <div>
      <h2>参加したイベント一覧</h1>
    </div>
    <div class="list-group">
      <% @past_events_part.each do |event| %>
        <%= link_to(event, class: 'list-group-item') do %>
          <h4 class="list-group-item-heading">
            <%= event.name %>
          </h4>
          <p class="list-group-item-text">
            <%= event.start_time.strftime('%Y/%m/%d %H:%M') %> - <%= event.end_time.strftime('%Y/%m/%d %H:%M') %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
